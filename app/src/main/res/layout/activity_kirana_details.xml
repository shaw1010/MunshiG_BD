<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.KiranaDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideInset">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/kirana_pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/kirana_name_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kirana_pic"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="#ff9c51"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/vendor_name_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kirana_name_details"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:textColor="#000000"
                android:text="Kiranedar"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/address_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vendor_name_details"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:paddingTop="15dp"
                android:text="Address"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/address_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vendor_name_details"
                android:layout_toRightOf="@+id/address_details"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:paddingTop="15dp"
                android:textSize="20dp"
                />

            <TextView
                android:id="@+id/size_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_details"
                android:paddingBottom="15dp"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="Size of Shop"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/co_mehboob_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Co-Mehboobs: "
                android:layout_below="@+id/size_details"
                android:paddingBottom="15dp"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:textSize="20dp"
                />


            <LinearLayout
                android:id="@+id/comehboob_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                />

            <Button
                android:id="@+id/barcode_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginTop="25dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/co_mehboob_text"
                android:paddingBottom="15dp"
                android:paddingLeft="25dp"
                android:layout_marginBottom="20dp"
                android:paddingRight="25dp"
                android:paddingTop="15dp"
                android:text="Barcode"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/speech_add"
                android:layout_below="@id/co_mehboob_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="15dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="15dp"
                android:text="Speech"
                android:textColor="@android:color/background_light" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>