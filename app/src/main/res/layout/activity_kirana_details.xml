<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mehboob.Activities.KiranaDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/kirana_pic"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/kirana_name_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kirana_pic"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="#ff9c51"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/vendor_name_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kirana_name_details"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="Kiranedar: "
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/address_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vendor_name_details"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="Address: "
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/address_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vendor_name_details"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/address_details"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:textColor="#000000"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/addressMap"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vendor_name_details"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/address_data"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="5dp"
                app:srcCompat="@android:drawable/ic_dialog_map" />

            <TextView
                android:id="@+id/serial_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kirana No: "
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_below="@id/address_details"/>

            <TextView
                android:id="@+id/size_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/serial_text"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="Size of Shop: "
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/co_mehboob_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/size_details"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:text="Co-Mehboobs: "
                android:textColor="#000000"
                android:textSize="20dp" />


            <LinearLayout
                android:id="@+id/comehboob_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/size_details"
                android:layout_marginBottom="50dp"
                android:layout_toRightOf="@+id/co_mehboob_text"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button_Layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/comehboob_layout"
                android:layout_marginTop="10dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/speech_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/co_mehboob_text"
                    android:layout_weight="1"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp"
                    android:text="Speech"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/barcode_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/co_mehboob_text"
                    android:layout_weight="1"
                    android:paddingBottom="25dp"
                    android:paddingTop="25dp"
                    android:text="Barcode"
                    android:textColor="@android:color/background_light" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>